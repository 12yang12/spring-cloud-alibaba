<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yang.dao.UserMapper">
    <select id="findAllUser" resultType="com.yang.entity.User">
        select * from user;
    </select>

    <select id="findUserById" parameterType="int" resultType="com.yang.entity.User">
        select * from user where id = #{id};
    </select>

    <insert id="insertUser" parameterType="com.yang.entity.User">
        insert into user (name, age, sex) values (#{name}, #{age}, #{sex});
    </insert>

    <select id="updateUser" parameterType="com.yang.entity.User" resultType="Integer">
        update user
        set name = #{name},
            age  = #{age},
            sex  = #{sex})
        where id = #{id};
    </select>

    <select id="deleteById" parameterType="Integer" resultType="Integer">
        delete
        from user
        where id = #{id};
    </select>
</mapper>