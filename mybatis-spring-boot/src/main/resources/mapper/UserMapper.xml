<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yang.dao.UserMapper">
    <select id="findAllUser" resultType="User">
        select *
        from user;
    </select>

    <select id="findUserById" parameterType="Integer" resultType="User">
        select *
        from user
        where id = #{id};
    </select>

    <select id="insertUser" parameterType="User" resultType="Integer">
        insert into user ("name", "age", "sex")
        values (#{name}, #{age}, #{sex});
    </select>

    <select id="updateUser" parameterType="User" resultType="Integer">
        update user
        set name = #{name},
            age  = #{age},
            sex  = #{sex})
        where id = #{id};
    </select>

    <select id="deleteById" parameterType="Integer" resultType="Integer">
        delete
        from user
        where id = #{id};
    </select>
</mapper>